<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blockshine.api.dao.AccountDao">

	<resultMap id="BaseResultMap" type="com.blockshine.api.dto.AccountDTO">
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="username" property="username" jdbcType="VARCHAR" />
		<result column="address" property="address" jdbcType="VARCHAR" />
	</resultMap>

	<insert id="inserAccount" parameterType="com.blockshine.api.dto.AccountDTO"
		useGeneratedKeys="true" keyProperty="id">
		insert into block_user
		(
		`username`,
		`password`,
		`address`
		)
		values
		(
		#{username},
		#{password},
		#{address}
		)
	</insert>

	<update id="updateAccount" parameterType="com.blockshine.api.dto.AccountDTO">
		update block_user
		set address = #{address,jdbcType=VARCHAR}
		where
		username = #{username,jdbcType=VARCHAR} and
		status = 1;
	</update>

	<select id="userNameExists" resultType="java.lang.Integer"
		parameterType="com.blockshine.api.dto.AccountDTO">
		select count(id)
		from block_user
		where
		username =
		#{username,jdbcType=VARCHAR} and
		status = 1;

	</select>

	<select id="checkLogin" resultMap="BaseResultMap"
		parameterType="com.blockshine.api.dto.AccountDTO">
		select id,username,address
		from block_user
		where
		username =
		#{username,jdbcType=VARCHAR} and
		password = #{password,jdbcType=VARCHAR} and
		status = 1;
	</select>

	<select id="accountInfo" resultMap="BaseResultMap"
		parameterType="com.blockshine.api.dto.AccountDTO">
		select id,username,address
		from block_user
		where
		username =
		#{username,jdbcType=VARCHAR} and
		status = 1;
	</select>

</mapper>